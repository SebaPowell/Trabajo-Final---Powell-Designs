<div class="container">
    <div class="row">
        <div class="col-8 offset-2 container-form">
            <div class="container-tituloForm">
                <h4 class="form-titulo">Agregar Noticias</h4>
            </div>
            <form action="/admin/admin/agregarNoticias" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Título" name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Ingrese un texto" name="texto"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary add-form">Guardar</button>
                </div>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>
