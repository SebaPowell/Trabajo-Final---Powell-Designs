<div class="container">
    <div class="row">
        <div class="col-8 offset-2 container-form">
            <div class="container-tituloForm">
                <h4 class="form-titulo">Modificar Noticias</h4>
            </div>
            <form action="/admin/admin/modificarNoticias" method="post">
                <input type="hidden" value="{{noticia.id}} " name="id">
                <div class="form-group">
                    <label for="">Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{noticia.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Texto</label>
                    <textarea type="text" class="form-control" name="texto">{{noticia.texto}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary add-form">Guardar</button>
                </div>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>
