<div class="container">
    <div class="row">
        <div class="col-8 offset-2 container-form">
            <div class="container-tituloForm">
                <h4 class="form-titulo">Agregar Imagenes</h4>
                <div class="separador"></div>
                <h6 class="form-subtitulo">Otras Técnicas</h6>
            </div>
            <form action="/admin/admin/agregarGaleria2" method="post" enctype="multipart/form-data">
                 <div class="form-group">
                    <label for="">Título</label>
                    <input type="text" class="form-control" placeholder="Ingresa un título" name="titulo" id="titulo">
                </div>
                <div class="form-group">
                    <label for="">Imagen</label>
                    <input type="file" class="form-control" name="imagen" id="imagen">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary add-form">Guardar</button>
                </div>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>
