<nav class="row navbar navbar-dark bg-dark fixed-top">
    <div class="col-4 container-admin">
        <img id="navbar-img" src="/images/Logo.png" alt="Logo">
        <p id="navbar-admin">: Administrador</p>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-10 offset-1 container-form">
            <div class="container-tituloForm">
                <h4 class="form-titulo">Modificar Imagenes</h4>
                <div class="separador"></div>
                <h6 class="form-subtitulo">Otras Técnicas</h6>
            </div>
            <form action="/admin/admin/modificarGaleria2" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{imagenes.id}} " name="id">
                <div class="form-group">
                    <label for="">Título</label>
                    <input type="text" class="form-control" value="{{imagenes.titulo}}" name="titulo" id="titulo">
                </div>
                <div class="form-group">
                    <p>
                        <label for="">Imagen</label>
                        <input type="file" class="form-control" name="imagen" id="imagen">
                    </p>
                    <p>
                        <label for=""> <input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar
                            imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{imagenes.imagen}}">
                    </p>

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary add-form">Guardar</button>
                </div>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>
